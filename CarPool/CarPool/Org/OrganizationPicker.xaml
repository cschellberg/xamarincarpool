<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Org.OrganizationPicker" Style="{StaticResource windowStyle}">
    <ContentPage.Content>
        <ScrollView>
            <Label Text="Pick Your Organization!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Grid x:Name="OrganizationsGrid"  Padding="10" ColumnSpacing="10" Style="{StaticResource backgroundStyle}" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="OrganizationList" Style="{StaticResource labelStyle}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>